            // Function to get BMC template
            function getBMCTemplate() {
                const bmcItems = [
                    { title: "Customer Segments", desc: "Siapa target pelangganmu?" },
                    { title: "Value Proposition", desc: "Apa nilai unik yang kamu tawarkan?" },
                    { title: "Channels", desc: "Bagaimana kamu menjangkau pelanggan?" },
                    { title: "Customer Relationship", desc: "Bagaimana kamu berinteraksi dengan pelanggan?" },
                    { title: "Revenue Streams", desc: "Bagaimana bisnismu menghasilkan uang?" },
                    { title: "Key Resources", desc: "Aset apa yang paling penting?" },
                    { title: "Key Activities", desc: "Aktivitas kunci apa yang kamu lakukan?" },
                    { title: "Key Partnerships", desc: "Siapa mitra kerjamu?" },
                    { title: "Cost Structure", desc: "Apa saja biaya terbesar dalam bisnismu?" }
                ];
                return bmcItems.map(item => `
                    <div class="bg-gray-50 p-3 rounded-lg">
                        <h5 class="font-bold text-sm text-primary">${item.title}</h5>
                        <p class="text-xs text-gray-500 mb-2">${item.desc}</p>
                        <textarea class="w-full text-sm p-2 border rounded-md h-24"></textarea>
                    </div>
                `).join('');
            }
            
            // Function to generate and manage the quiz
            function setupQuiz() {
                const quizContainer = document.getElementById('quiz-container');
                if (!quizContainer) return;

                const questions = [
                    {
                        q: "Manakah yang BUKAN merupakan risiko dalam berwirausaha digital?",
                        options: ["Persaingan ketat", "Perubahan algoritma media sosial", "Modal awal yang selalu besar", "Keamanan siber"],
                        answer: "Modal awal yang selalu besar"
                    },
                    {
                        q: "Sikap terbaik saat menghadapi kegagalan produk pertama adalah...",
                        options: ["Menyerah dan mencari ide lain", "Menganalisis penyebab, belajar, dan mencoba lagi (pivot)", "Menyalahkan pasar", "Mengabaikan feedback negatif"],
                        answer: "Menganalisis penyebab, belajar, dan mencoba lagi (pivot)"
                    },
                    {
                        q: "Apa itu 'risiko yang terukur' (calculated risk)?",
                        options: ["Mengambil risiko tanpa berpikir", "Risiko yang sudah dianalisis potensi keuntungan dan kerugiannya", "Menghindari semua jenis risiko", "Hanya mengambil risiko jika pasti untung"],
                        answer: "Risiko yang sudah dianalisis potensi keuntungan dan kerugiannya"
                    }
                ];

                let quizHTML = '';
                questions.forEach((item, index) => {
                    quizHTML += `<div class="quiz-item border p-4 rounded-lg">
                        <p class="font-semibold mb-2">${index + 1}. ${item.q}</p>
                        <div class="space-y-2">`;
                    item.options.forEach(opt => {
                        quizHTML += `<div>
                            <input type="radio" id="q${index}-${opt.replace(/\s/g, '')}" name="q${index}" value="${opt}" class="mr-2">
                            <label for="q${index}-${opt.replace(/\s/g, '')}">${opt}</label>
                        </div>`;
                    });
                    quizHTML += `</div></div>`;
                });
                quizContainer.innerHTML = quizHTML;

                document.getElementById('check-quiz-btn').addEventListener('click', () => {
                    let score = 0;
                    questions.forEach((item, index) => {
                        const selected = document.querySelector(`input[name="q${index}"]:checked`);
                        const quizItem = selected.closest('.quiz-item');
                        if (selected) {
                            if (selected.value === item.answer) {
                                score++;
                                quizItem.style.backgroundColor = '#d1fae5'; // green
                            } else {
                                quizItem.style.backgroundColor = '#fee2e2'; // red
                            }
                        }
                    });
                    const resultEl = document.getElementById('quiz-result');
                    resultEl.innerHTML = `<p class="font-bold">Skor Anda: ${score} dari ${questions.length}.</p>`;
                    if (score >= 2) { // Threshold to complete
                        completeMeeting(2);
                        resultEl.innerHTML += `<p class="text-green-600">Kerja bagus! Kamu sudah bisa lanjut ke pertemuan berikutnya.</p>`;
                    } else {
                         resultEl.innerHTML += `<p class="text-red-600">Coba pelajari lagi dan perbaiki jawabanmu ya!</p>`;
                    }
                });
            }

            // Function to attach event listeners for dynamically created content
            function attachDynamicEventListeners(nomor) {
                if (nomor === 1) {
                    document.getElementById('pretest-form').addEventListener('submit', e => e.preventDefault());
                    document.getElementById('selesai-p1').addEventListener('click', () => {
                        document.getElementById('approval-notice').classList.remove('hidden');
                    });
                    document.getElementById('sim-approve-btn').addEventListener('click', () => {
                        completeMeeting(1);
                        alert("Selamat! Pertemuan 1 selesai. Kamu bisa melanjutkan ke Pertemuan 2.");
                        pertemuanContent.innerHTML = '';
                    });
                }
                if (nomor === 2) {
                    setupQuiz();
                }
                if (nomor === 3) {
                    document.getElementById('selesai-p3').addEventListener('click', () => {
                        completeMeeting(3);
                        alert("Pertemuan 3 selesai. Lanjutkan semangatmu!");
                        pertemuanContent.innerHTML = '';
                    });
                }
                if (nomor === 4) {
                    document.getElementById('selesai-p4').addEventListener('click', () => {
                        completeMeeting(4);
                        alert("Hebat! BMC sudah terisi. Tinggal selangkah lagi!");
                        pertemuanContent.innerHTML = '';
                    });
                }
                if (nomor === 5) {
                    document.getElementById('posttest-form').addEventListener('submit', e => e.preventDefault());
                    document.getElementById('selesai-p5').addEventListener('click', () => {
                        completeMeeting(5);
                        alert("SELAMAT! Kamu telah menyelesaikan seluruh program Careerupreneur. Teruslah berkarya dan wujudkan impian wirausahamu!");
                        showPage('beranda');
                        pertemuanContent.innerHTML = '';
                    });
                }
            }
            
            // --- EVENT LISTENERS ---

            // Navigation
            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const pageId = e.target.closest('.nav-link').dataset.page;
                    showPage(pageId);
                });
            });

            // Login form submission
            loginForm.addEventListener('submit', handleLogin);
            
            // Start class button
            startClassBtn.addEventListener('click', () => showPage('kelas'));

            // Pertemuan buttons
            pertemuanBtns.forEach(btn => {
                btn.addEventListener('click', (e) => {
                    if (e.currentTarget.disabled) return;
                    const nomorPertemuan = parseInt(e.currentTarget.dataset.pertemuan);
                    renderPertemuan(nomorPertemuan);
                });
            });

            // Mobile menu toggle
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // Initial Setup
            lucide.createIcons();
        });
    </script>
</body>
</html>
